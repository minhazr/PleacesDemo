<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="@dimen/list_item_standard_margin"
    android:clickable="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_standard_margin"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="64682326"
            android:textStyle="bold"
            android:id="@+id/textViewPhone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_standard_margin"
            android:layout_marginRight="@dimen/list_item_standard_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Location"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutLocationReceived"
                android:layout_marginTop="@dimen/list_item_standard_margin"
                android:layout_marginLeft="@dimen/list_item_standard_margin"
                android:layout_marginRight="@dimen/list_item_standard_margin"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#90A4AE"
                    android:text="@string/Received"
                    android:layout_weight=".3"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#0000FF"
                    android:layout_weight=".7"
                    android:id="@+id/textViewLocationReceived"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutLocationSent"
                android:layout_marginTop="@dimen/list_item_standard_margin"
                android:layout_marginLeft="@dimen/list_item_standard_margin"
                android:layout_marginRight="@dimen/list_item_standard_margin"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#90A4AE"
                    android:text="@string/Sent"
                    android:layout_weight=".3"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#0000FF"
                    android:textSize="14sp"
                    android:layout_weight=".7"
                    android:id="@+id/textViewLocationSent"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_standard_margin"
            android:layout_marginRight="@dimen/list_item_standard_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:textColor="#90A4AE"
                android:id="@+id/textViewTime"/>

        </RelativeLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>